@using Microsoft.AspNetCore.Identity
@inject SignInManager<Utilisateur> SignInManager
@inject UserManager<Utilisateur> UserManager



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservation_Std</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="~/css/site.css" rel="stylesheet" />

    <style>



        .mnv {
            color: #ffffff;
        }

            .mnv:hover {
                color: black;
                font-size: 15px;
            }
    </style>

</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style=" color:#ffffff;  background: -webkit-linear-gradient(to right, #4e4376, #2b5876); background: linear-gradient(to Bottom, #4e4376, #2b5876);">

            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/LogoR.png" style="width:50px;" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                 
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link mnv" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link  mnv" asp-area="" asp-controller="Home" asp-action="AdminDashboard">Admin dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link  mnv" asp-area="" asp-controller="Home" asp-action="UserDashboard">Add reservation</a>
                            </li>
                        }
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link mnv" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link mnv" asp-area="" asp-controller="Adminstration" asp-action="ListRoles">Roles</a>
                            </li>

                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link  mnv" asp-area="" asp-controller="Adminstration" asp-action="ListUsers">Users</a>
                            </li>


                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link  mnv" asp-area="" asp-controller="Home" asp-action="AdminDashboard">Admin dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a style="color:#ffffff;" class="nav-link  mnv" asp-area="" asp-controller="Home" asp-action="UserDashboard">Add reservation</a>
                            </li>
                        }
                    </ul>
                  
                </div>
            </div>

        </nav>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Reservation Std - <a asp-area="" asp-controller="Home" asp-action="index">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
